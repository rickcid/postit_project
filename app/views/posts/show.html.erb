<h4>Showing Post:</h4>
<%= link_to @post.title, fix_url(@post.url) %>

<%= render 'shared/errors', obj: @comment %>
<h4>Create a comment</h4>
<%= form_for [@post, @comment] do |f| %>
	<%= f.text_area :body %>
 	<br/>
 	<%= f.submit "Create comment" %>
<% end %>

<h5>Comments:</h5>
<ul>
 	<% @post.reload.comments.each do |comment| %>
 		<li><%= comment.body %></li>
	<% end %>
</ul>
